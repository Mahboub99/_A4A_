@model IEnumerable<A4A.Models.ProblemSetModel>

@{
    ViewBag.Title = "ProblemSet";
}
<h2>ProblemSet</h2>
<script>$('table').DataTable();</script>

<table id="dtBasicExample" class="table table-hover table-bordered " cellspacing="0" width="100%">
    <tr>
        <th class="th-sm">
            @Html.DisplayNameFor(model => model.ProblemName)
        </th>
        <th class="th-sm">
            @Html.DisplayNameFor(model => model.ProblemTopic)
        </th>
        <th class="th-sm">
            @Html.DisplayNameFor(model => model.ProblemDifficulty)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProblemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProblemTopic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProblemDifficulty)
            </td>
            <td>
                @Html.ActionLink("View", "ViewProblem", "Problem", new { ProblemLink = item.ProblemLink }, null)
            </td>
        </tr>
    }

</table>