@model IEnumerable<A4A.Models.GroupModel>

@{
	ViewBag.Title = "ViewMyGroups";
	if (ViewBag.ID == 0 || ViewBag.ID == null)
	{
		Layout = "~/Views/Shared/_Layout.cshtml";
	}
	else
	{
		Layout = "~/Views/Shared/User_LayoutPage1.cshtml";
	}
	string UserName = ViewBag.UserName;
	int id = 0;
	int.TryParse(Convert.ToString(ViewBag.ID), out id);
}

<br/>
<h2>View My Groups</h2>

<p>
	<br />
	<button style="margin-right:6px;" class="btn btn-outline-primary" onclick="location.href='@Url.Action("ViewAllGroups", "Group", new {id = id, UserName = UserName}, null)';return false;">Groups &raquo;</button>
	<button style="margin-right:6px;"class="btn btn-outline-primary" onclick="location.href='@Url.Action("ViewMyGroups", "Group", new {id = id, UserName = UserName}, null)';return false;">My Groups &raquo;</button>
	<button class="btn btn-outline-primary" onclick="location.href='@Url.Action("CreateGroup", "Group", new {id = id, UserName = UserName}, null)';return false;">Create Group &raquo;</button>
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.GroupID)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.GroupName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.AdminID)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.GroupID)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.GroupName)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.AdminID)
		</td>
		<td>
			@Html.ActionLink("View", "ViewGroupContests", new { GroupId = item.GroupID, id = id, UserName = UserName })
        </td>
	</tr>
}

</table>