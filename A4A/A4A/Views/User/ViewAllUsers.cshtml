@model IEnumerable<A4A.Models.UsersModel>

@{
    ViewBag.Title = "ViewAllUsers";
    if (ViewBag.id == 0 || ViewBag.id == null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/User_LayoutPage1.cshtml";
    }
}
<br />
<h2>👨‍💻 Users</h2>

<p>
	<br />
	<button style="margin-right:6px;" class="btn btn-outline-primary" onclick="location.href='@Url.Action("CreateUser", "User")';return false;">Add Friend &raquo;</button>
	<button class="btn btn-outline-primary" onclick="location.href='@Url.Action("ViewUser", "User")';return false;">View My Friends &raquo;</button>
</p>
<table id="dtBasicExample" class="table table-hover table-bordered " cellspacing="0">
    <tr class="table-primary">
        <th style="font-style:inherit">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
			Explore
		</th>
    </tr>
    @{
        string s = ViewBag.UserName;
        int IV = 0;
        bool Done = int.TryParse(Convert.ToString(ViewBag.ID), out IV);
        bool ShowFriends = false;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @{
                    if (item.ID == IV) { ShowFriends = true; } else { ShowFriends = false; }

                }
                @Html.ActionLink("View", "ViewUser", "User", new { id = item.ID, IV = IV, UserName = s ,ShowFriends =ShowFriends}, null)
            </td>
        </tr>
    }

</table>

<br />
<div>
	@Html.ActionLink("Back to Home Page", "Index", "Home")
</div>
