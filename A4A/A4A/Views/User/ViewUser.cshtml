@model A4A.Models.AccountModel

@{
    ViewBag.Title = "ViewUser";

    int ID = Convert.ToInt16(Session["ID"]);

    if (ID == 0)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/User_LayoutPage1.cshtml";
    }
}

<br />
<h2>👀 View User</h2>
<br />

<p>
    <button class="btn btn-outline-primary" onclick="location.href='@Url.Action("ViewAllUsers", "User")';return false;">View All Users &raquo;</button>
    <button style="margin-right:6px;" class="btn btn-outline-primary" onclick="location.href='@Url.Action("AddFriend", "User")';return false;">Add Friend &raquo;</button>
    <button class="btn btn-outline-primary" onclick="location.href='@Url.Action("Friends", "User")';return false;">View My Friends &raquo;</button>
</p>

<table id="dtBasicExample" class="table table-hover table-bordered " cellspacing="0">
    <tr class="table-primary">
        <th style="font-style:inherit"> User Name</th>
        <th> Email </th>
        <th> Rating </th>
        <th> Solve Problems </th>
        <th> Binding Problems </th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(model => model.Fname)
            @Html.DisplayFor(model => model.Lname)
        </td>
        <td> @Html.DisplayFor(model => model.Email) </td>
        <td> @Html.DisplayFor(model => model.Rating) </td>
        <td> @Html.DisplayFor(model => model.Solved) </td>
        <td> @Html.DisplayFor(model => model.Binding)</td>
    </tr>

</table>

<p>
    @{
        <span style="margin-right:15px;">@Html.ActionLink("Friends", "Friends", "User")</span>
            @Html.ActionLink("Add Friend", "AddFriend", "User");
    }
    
</p>
