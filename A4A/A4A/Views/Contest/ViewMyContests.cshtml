@model IEnumerable<A4A.Models.ContestModel>

@{
    ViewBag.Title = "ViewMyContests";

    int ID = Convert.ToInt16(Session["ID"]);

    if (ID == 0)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/User_LayoutPage1.cshtml";
    }
}

<h2>Your Contests</h2>
<tr>
    <th>
        @Html.ActionLink("Contests", "ViewContests")
    </th>
    <th>
        @Html.ActionLink("MyContests", "ViewMyContests")
    </th>
    <th>
        @Html.ActionLink("Create Contest", "InsertContest")
    </th>
</tr>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContestID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContestName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContestDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContestLength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContestWriterID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContestWriterName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContestID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContestName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContestDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContestLength)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContestWriterID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContestWriterName)
        </td>
        <td>
            @Html.ActionLink("View", "ContestProblems", "Contest", new { ContestID = item.ContestID }, null)
        </td>
    </tr>
}

</table>
